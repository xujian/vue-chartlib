{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "mocha",
      "chai"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@chartlib/*": [
        "src/*"
      ],
      "@ui/*": [
        "ui/*"
      ],
      "@sb/*": [
        ".storybook/*"
      ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "support/**/*.ts",
    "support/**/*.js",
    "support/**/*.vue",
    "ui/**/*.ts",
    "ui/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/index.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
